<% provide(:title, 'Sign up') %>

<div class="center">
  <h1 id="signup-title">Signup</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="jumbotron signup-form">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
  
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
  
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
  
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :classification, "Description (Entrepreneur, Software Developer, etc.)" %>
        <%= f.text_field :classification, class: 'form-control' %>
  
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        
        <%= f.submit "Create my account", class: "my-personal-button" %>
      <% end %>
    </div>
  </div>
</div>